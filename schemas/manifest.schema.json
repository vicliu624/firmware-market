{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Firmware manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "name",
    "version",
    "boards",
    "regions",
    "features",
    "trust",
    "publisher",
    "release",
    "artifacts"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 3,
      "maxLength": 80,
      "pattern": "^[a-z0-9][a-z0-9._-]+$"
    },
    "name": { "type": "string", "minLength": 3, "maxLength": 120 },
    "tagline": { "type": "string", "minLength": 0, "maxLength": 160 },
    "version": { "type": "string", "minLength": 1, "maxLength": 40 },
    "description": { "type": "string", "minLength": 0, "maxLength": 500 },
    "license": { "type": "string", "minLength": 0, "maxLength": 80 },
    "boards": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["brand", "model"],
        "properties": {
          "brand": { "type": "string", "minLength": 1, "maxLength": 40 },
          "model": { "type": "string", "minLength": 1, "maxLength": 60 },
          "label": { "type": "string", "minLength": 0, "maxLength": 80 }
        }
      }
    },
    "mcu": {
      "type": "array",
      "items": { "type": "string", "minLength": 1, "maxLength": 60 }
    },
    "regions": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 2, "maxLength": 20 }
    },
    "features": {
      "type": "array",
      "minItems": 0,
      "items": { "type": "string", "minLength": 1, "maxLength": 40 }
    },
    "scenes": {
      "type": "array",
      "minItems": 0,
      "items": { "type": "string", "minLength": 1, "maxLength": 40 }
    },
    "trust": { "type": "string", "enum": ["official", "verified", "community"] },
    "release_channel": { "type": "string", "enum": ["stable", "preview"] },
    "support": { "type": "string", "enum": ["supported", "deprecated"] },
    "featured": { "type": "boolean" },
    "publisher": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "github", "repo"],
      "properties": {
        "name": { "type": "string", "minLength": 1, "maxLength": 80 },
        "github": { "type": "string", "minLength": 1, "maxLength": 80 },
        "repo": { "type": "string", "minLength": 1, "maxLength": 200 },
        "avatar": { "type": "string", "minLength": 0, "maxLength": 200 }
      }
    },
    "release": {
      "type": "object",
      "additionalProperties": false,
      "required": ["date", "notes"],
      "properties": {
        "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "notes": { "type": "string", "minLength": 1, "maxLength": 200 }
      }
    },
    "artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["file", "type", "url", "sha256"],
        "properties": {
          "file": { "type": "string", "minLength": 1, "maxLength": 120 },
          "type": { "type": "string", "enum": ["bin", "uf2", "hex"] },
          "url": { "type": "string", "minLength": 5, "maxLength": 300 },
          "sha256": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },
          "size": { "type": "integer", "minimum": 1 },
          "variant": { "type": "string", "minLength": 0, "maxLength": 80 },
          "flash": {
            "type": "object",
            "additionalProperties": false,
            "required": ["offset"],
            "properties": {
              "offset": { "type": "string", "pattern": "^0x[0-9a-fA-F]+$" }
            }
          }
        }
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "min_bootloader": { "type": "string", "minLength": 1, "maxLength": 40 },
        "notes": { "type": "string", "minLength": 0, "maxLength": 500 }
      }
    },
    "story": {
      "type": "array",
      "minItems": 0,
      "items": { "type": "string", "minLength": 0, "maxLength": 400 }
    },
    "feature_sections": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "summary"],
        "properties": {
          "title": { "type": "string", "minLength": 1, "maxLength": 80 },
          "summary": { "type": "string", "minLength": 1, "maxLength": 300 },
          "image": { "type": "string", "minLength": 0, "maxLength": 200 },
          "requires": { "type": "string", "minLength": 0, "maxLength": 120 }
        }
      }
    },
    "poster": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "hero": { "type": "string", "minLength": 0, "maxLength": 200 },
        "gallery": {
          "type": "array",
          "minItems": 0,
          "items": { "type": "string", "minLength": 0, "maxLength": 200 }
        },
        "feature_map": {
          "type": "object",
          "additionalProperties": { "type": "string", "minLength": 0, "maxLength": 200 }
        }
      }
    },
    "links": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "homepage": { "type": "string", "minLength": 0, "maxLength": 200 },
        "docs": { "type": "string", "minLength": 0, "maxLength": 200 }
      }
    }
  }
}
